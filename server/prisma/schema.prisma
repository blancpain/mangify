// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"

  url = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(BASIC)
  disabled     Boolean  @default(false)
  profile      Profile?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email, role])
  @@map("users")
}

model Profile {
  id                String         @id @default(uuid())
  diet              Diet?
  sex               Sex?
  activity_level    ActivityLevel? @default(MODERATE)
  goal              Goal?          @default(MAINTAIN)
  age               Int?
  height            Int?
  weight            Int?
  calories          Int?
  protein           Int?
  carbs             Int?
  fats              Int?
  intolerances      String[]       @default([])
  favorite_cuisines String[]       @default([])
  meals_per_day     Int            @default(3)
  favorite_recipes  Int[]          @default([])
  meals             Meal[]
  shopping_list     Ingredients[]  @relation("UserIngredients")
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  user              User           @relation(fields: [userId], references: [id])
  userId            String         @unique

  @@index([diet, sex, activity_level, goal, height, weight])
  @@map("profile")
}

model Meal {
  id                 String        @id @default(uuid())
  recipe_external_id Int?
  unique_identifier  String?       @unique
  active             Boolean       @default(true)
  day                DateTime?     @default(now())
  ingredients        Ingredients[]
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  profile            Profile       @relation(fields: [profileId], references: [id])
  profileId          String

  @@map("meals")
}

model Ingredients {
  id          String    @id @default(uuid())
  external_id Int?      @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Meals       Meal[]
  user        Profile[] @relation("UserIngredients")

  @@map("ingredients")
}

enum Role {
  BASIC
  ADMIN
}

enum Sex {
  MALE
  FEMALE
}

enum ActivityLevel {
  SEDENTARY
  LIGHT
  MODERATE
  VERYACTIVE
}

enum Goal {
  LOSEWEIGHT
  MAINTAIN
  GAINWEIGHT
}

enum Diet {
  ANYTHING
  VEGETARIAN
  VEGAN
  KETOGENIC
  PALEO
  PESCETARIAN
}
